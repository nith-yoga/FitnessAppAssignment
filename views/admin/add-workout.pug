extends ../layout.pug 

block content 
    h1 Add Workout
        div 
    form(action="/admin/add-workout" method="POST")
        label(for="exerciseName") Exercise Name:
        input(type="text" name="exerciseName" required)
        br 
        label(for="weight") Weight (kg):
        input(type="number" name="weight" required)
        br
        label(for="sets") Sets: 
        input(type="number" name="sets" required)
        br 
        label(for="reps") Reps: 
        input(type="number" name="reps" required)
        br 
        button(type="submit") Add Workout 